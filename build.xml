<?xml version="1.0" encoding="UTF-8"?>
<project name="LEDService" default="build" basedir=".">
	<target name="clean">
		<delete dir="org"/>
		<delete file="org.webosinternals.ledservice.jar"/>
	</target>
	<target name="build">
		<javac 
			classpath="serviceframework.jar:lunaservice.jar:json.jar:Utils.jar"
			srcdir="."
			destdir="."
		/>
 	</target>
	<target name="jar" depends="build">
		<jar
			destfile="org.webosinternals.ledservice.jar"
			basedir="."
			includes="**/*.class"
		/>
    </target>
</project>
